@{
    ViewData["Title"] = "Home"; // or "Home Page" based on your preference
}
<!-- Home page specific CSS -->
<link href="@Url.Content("~/css/home.css")" rel="stylesheet">
<script src="@Url.Content("~/js/home.js")"></script>  <!-- Home page specific JS -->


<!-- Full-Screen Video Header Section -->
<header class="custom-header">
    <div class="video-container">
        <!-- Video Element -->
        <video autoplay muted loop id="welcomeVideo">
            <source src="/media/welcome_video.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>

        <div class="video-overlay"></div>

        <!-- Glass Navigation Bar -->
        <div class="glass-nav">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <h1><img class="logo-image" src="/media/logo.svg" alt="Community Logo"></h1>

                <!-- Navigation -->
                <nav>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-button" href="@Url.Action("Login", "Home")">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-button" href="@Url.Action("Chat", "Home")">Chat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-button" href="@Url.Action("contact", "Home")">Contact Us</a>
                        </li>
                    </ul>
                </nav>


                <!-- Join Button -->
                <div>
                    <a class="nav-button" href="@Url.Action("sign_up", "Home")">Join</a>
                </div>

            </div>
        </div>

        <!-- Main Content Section Above Video -->
        <main class="container text-center position-relative z-index-2 main-content">
            <h2>Welcome to Your Lost & Found Community!</h2>
            <p>Hello, we’re glad to have you here. Share your finds and connect with others in our vibrant community.</p>
            <div class="mt-4">
                <button class="btn-about-us" onclick="smoothScrollTo()">About Us</button>
            </div>
        </main>
    </div>
</header>

<!-- Engage Section -->
<section class="background-section py-0" id="engage-section">
    <div class="video-background">
        <video autoplay muted loop id="featureVideo">
            <source src="~/media/galaxy.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="container">
        <div class="engage-header text-center">
            <h2>Discover How to Connect and Contribute</h2>
            <p>Our platform empowers users to share their thoughts, join lively discussions, and help reunite lost items with their owners.</p>
        </div>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <div class="card" id="engage-card-1">
                    <div class="card-body">
                        <h4 class="card-title highlight overlay-text">Post Comments and Share Your Thoughts</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" id="engage-card-2">
                    <div class="card-body">
                        <h4 class="card-title highlight overlay-text">Join Real-Time Chats with Other Users</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" id="engage-card-3">
                    <div class="card-body">
                        <h4 class="card-title highlight overlay-text">Easily Upload Lost or Found Items</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center ready-to-join mt-5">
            <h2 class="section-title">Ready to Join Our Community?</h2>
            <p class="section-description">
                Become part of a platform where helping others is at the heart of everything we do.
            </p>
            <div class="mt-4">
                <button class="nav-button" id="benefit_button">Benefits</button>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="feature-section py-3" id="feature_section">
    <div class="video-background">
        <video autoplay muted loop id="featureVideo">
            <source src="~/media/galaxy.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <h2 class="text-center feature_h2">Explore Our Key Features for Enhanced Experience</h2>
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Efficient Session Management</h4>
                    <p class="card-text">Stay logged in securely while you navigate.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Secure Logout</h4>
                    <p class="card-text">Easily log out to protect your account.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Dynamic Updates</h4>
                    <p class="card-text">Experience instant updates without refreshing the page.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer specific Section -->
<footer class="footer">


    <div class="container">
        <!-- Social Media Links -->
        <div class="social-links">
            <a href="#" class="social-icon" title="Facebook">
                <img src="~/media/fb.png" alt="Facebook">
            </a>
            <a href="#" class="social-icon" title="Twitter">
                <img src="~/media/twitter.png" alt="Twitter">
            </a>
            <a href="#" class="social-icon" title="Instagram">
                <img src="~/media/insta.png" alt="Instagram">
            </a>
            <a href="#" class="social-icon" title="LinkedIn">
                <img src="~/media/google.png" alt="LinkedIn">
            </a>
        </div>

        <!-- Footer Links -->
        <ul class="footer-links">
            <li><a href="#"> Back to Home</a></li>
            <li><a href="#engage-section">About Us</a></li>
        </ul>

        <!-- Copyright -->
        <p>&copy; 2024 Lost & Found Community. All Rights Reserved.</p>
    </div>

    <!-- Common JS Libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</footer>
