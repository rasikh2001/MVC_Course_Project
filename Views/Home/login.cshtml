<link href="@Url.Content("~/css/login.css")" rel="stylesheet">
<script src="@Url.Content("~/js/login.js")"></script>  <!-- Login page specific JS -->

<div class="container">
    <!-- Left Section: Login Form -->
    <div class="login-section">
        <h1>Admin panel</h1>

        <form method="post" action="@Url.Action("Login", "Home")">
            <!-- POST action to handle login -->
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" required>

            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>

            <div class="form-check">
                <input type="checkbox" id="show-password" onclick="togglePassword()">
                <label for="show-password">Show Password</label>
            </div>

            <button type="submit" class="login-btn">Login</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
                <div class="alert alert-danger">
                @ViewBag.ErrorMessage
                </div>
        }

        <button class="create-account-btn" onclick="window.location.href='@Url.Action("sign_up", "Home")'">Create New Account</button>

        <div class="social-links">
            <a href="https://www.facebook.com" target="_blank"><img src="~/media/fb.png" alt="Facebook" class="social-icon"></a>
            <a href="https://www.google.com" target="_blank"><img src="~/media/google.png" alt="Google" class="social-icon"></a>
            <a href="https://www.instagram.com" target="_blank"><img src="~/media/insta.png" alt="Instagram" class="social-icon"></a>
        </div>
    </div>

    <!-- Right Section: Image -->
    <div class="image-section">
        <div class="overlay">Lost and Found Community Center</div>
    </div>
</div>
