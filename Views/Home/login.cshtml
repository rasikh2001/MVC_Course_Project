

<link href="@Url.Content("~/css/login.css")" rel="stylesheet">
<script src="@Url.Content("~/js/login.js")"></script>  <!-- Login page specific JS -->

<div class="container">
    <!-- Left Section: Login Form -->
    <div class="login-section">
        <h1>Welcome Back!</h1>

        <form method="post" action="/Home/Login">
            <!-- POST action to handle login -->
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" required>

            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>

            <div class="form-check">
                <input type="checkbox" id="show-password" onclick="togglePassword()">
                <label for="show-password">Show Password</label>
            </div>

            <button type="submit" class="login-btn">Login</button>
        </form>

        <button class="create-account-btn" onclick="window.location.href='@Url.Action("Sign_up", "Home")'"> Create New Account</button>

        <div class="social-links">
            <div>
                <a href="https://www.facebook.com" target="_blank">
                    <img src="~/media/fb.png" alt="Facebook" class="social-icon">
                </a>
                <a href="https://www.google.com" target="_blank">
                    <img src="~/media/google.png" alt="Google" class="social-icon">
                </a>
                <a href="https://www.instagram.com" target="_blank">
                    <img src="~/media/insta.png" alt="Instagram" class="social-icon">
                </a>
            </div>
        </div>
    </div>

    <!-- Right Section: Image -->
    <div class="image-section">
        <div class="overlay">Lost and Found Community Center</div>
    </div>
</div>
<!-- Common JS Libraries -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
