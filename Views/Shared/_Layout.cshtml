<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Lost & Found Community</title>

    <!-- Link to global stylesheets (e.g., Bootstrap) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Include any global stylesheets here (if needed) -->
    <link href="@Url.Content("~/css/global.css")" rel="stylesheet">

    @RenderSection("Styles", required: false)  <!-- Allow page-specific CSS -->
</head>
<body>

    <!-- Header Section (Can be added later if needed) -->
    @RenderSection("Header", required: false)

    <!-- Page Content will be rendered here -->
    @RenderBody()  <!-- Page-specific content will be injected here -->
    <!-- Footer Section (Can be added later if needed) -->
    @RenderSection("Footer", required: false)

    <!-- Global JavaScript libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)  <!-- Allow page-specific JavaScript -->
</body>
</html>
